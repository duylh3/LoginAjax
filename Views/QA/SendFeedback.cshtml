@{
    ViewBag.Title = "SendFeedback";
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}

@section Scripts{
    <script src="~/Scripts/app/controller/SendFeedbackJS.js"></script>
}

@if (Session["Username"] != null)
{
    <h4 style="margin-left:-12px" id="categoryName"></h4>
    <div class="row" style="margin-right:0px">
        <textarea class="form-control col-md-8" name="content" id="txtFeedback" rows="15" cols="150" placeholder="Bạn hãy nhập nội dung cụ thể vào đây" style="margin-left:2px; width:99.5%"></textarea>
        <button type="submit" class="btn btn-outline-primary" id="btnSendEmail" style="float:right; margin-top: 5px; margin-right: 2px"> Send </button>
    </div>
}
else
{
    <h4 style="margin-left:-12px" id="categoryName"></h4>
    <div class="row" style="margin-right:0px">
        <textarea class="form-control col-md-8" name="content" id="txtFeedback" rows="15" cols="150" placeholder="Vui lòng đăng nhập để thực hiện chức năng này" style="margin-left:2px;width:99.5%"></textarea>
        <div class="row">
            <input type="file" name="fileUploader" />
        </div>
        <div class="row">
            <div class="col-md-12 form-inline" style="margin-top:2px">
                <button type="submit" class="btn btn-outline-primary" id="sendEmail" style="float:right; margin-right: 2px;"> Send </button>
                <div class="form-group" id="divPassword" style="float:right; margin-right: 2px">
                    <label>
                        Password
                    </label>
                    <input type="password" class="form-control" name="password" id="txtPassword" />
                </div>
                <div class="form-group" id="divId" style="float:right; margin-right: 2px">
                    <label>
                        ID
                    </label>
                    <input type="text" class="form-control" name="username" id="txtId" />
                </div>
            </div>
        </div>
    </div>
}


