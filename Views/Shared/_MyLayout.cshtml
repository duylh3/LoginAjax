<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Hệ thống quản lí ý kiến nhân viên</title>
    <!-- Bootstrap Core CSS -->
    <link href="~/Scripts/plugins/bootstrap.min.css" rel="stylesheet">
    @*<link href="~/Content/bootstrap.min.css" rel="stylesheet" />*@
    <!-- MetisMenu CSS -->
    <link href="~/Content/metisMenu.min.css" rel="stylesheet">
    <!-- Timeline CSS -->
    <link href="~/Content/timeline.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link href="~/Content/startmin.css" rel="stylesheet">
    <!-- Custom Fonts -->
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" type="text/css">
</head>
<body>
    <div class="container">
        <div class="row" style="margin-top: 2px;">
            @{
                var session = Session["Username"];
            }
            @if (session == null)
            {
                <div class="col-md-3" style="float:right">
                    <a href="~/User/Login" style="text-decoration:underline; float:right"><strong>Login</strong></a>
                </div>
            }
            else
            {
                <div class="pull-right">
                    <div class="col-md-12" style="text-align:right">
                        <span> <strong>@session / &nbsp</strong> <a href="~/User/Logout" style="text-decoration:underline; float:right"><strong> Logout</strong></a> </span>
                    </div>
                </div>
            }
        </div>
        <div class="row" style="height:68px">
            <div class="col-md-4" style="padding-left: 0px;">
                <img src="~/Resources/images/VST_logo.jpg" style="height:50px; margin-top: 9px" />
            </div>
            <div class="col-md-3" style="height:100%; display: flex; align-items: center; padding-bottom: 12px;">
                <span style="font-size:xx-large"> <strong> VST Staff Square </strong></span>
            </div>
            <div class="col-md-5">
                <img src="~/Resources/images/posco_slogan.gif" style="height:30px; float:right;margin-top: 26px;" />
            </div>
        </div>
        <div class="row">
            <div class="navbar-default sidebar" role="navigation" style="min-height:100%; padding-left:10px">
                <div class="sidebar-nav navbar-collapse">
                    <ul class="nav" id="side-menu">
                        <li style="font-size: larger;">
                            <a href="#"> <strong>1. Q&A/VOC của nhân viên </strong></a>
                        </li>
                        <li style="width:80%; padding-left:30px">
                            <select class="form-control" id="listCategory" name="category"></select>
                        </li>
                        <li style="width:80%; padding-left:30px">
                            <select class="form-control" id="subCategory"> </select>
                        </li>

                        <li style="padding-top:40px; font-size: larger;">
                            <a href="index.html"> <strong>2. Tài liệu tham khảo </strong></a>
                        </li>

                        <li>
                            <a href="#" style="padding-left:43px; font-size:inherit"><strong>Pháp luật Việt Nam</strong><span class="fa arrow"></span></a>
                            <ul class="nav nav-second-level" style="padding-left:14px">
                                <li>
                                    <a href="~/Document/ThamKhao?cate=Labor" id="Labor">- Luật lao động</a>
                                </li>
                                <li>
                                    <a href="~/Document/ThamKhao?cate=RuleInsurrance" id="RuleInsurrance">- Luật bảo hiểm</a>
                                </li>
                                <li>
                                    <a href="~/Document/ThamKhao?cate=RuleTax" id="RuleTax">- Luật thuế</a>
                                </li>
                            </ul>
                            <!-- /.nav-second-level -->
                        </li>
                        <li>
                            <a href="#" style="padding-left:43px; font-size:inherit"><strong>Quy định công ty</strong> <span class="fa arrow"></span></a>
                            <ul class="nav nav-second-level" style="padding-left:14px">
                                <li>
                                    <a href="~/Document/ThamKhao/?cate=RuleHR" id="RuleHR">- Quy định nhân sự</a>
                                </li>
                                <li>
                                    <a href="~/Document/ThamKhao/?cate=RuleSafety" id="RuleSafety">- Quy định an toàn</a>
                                </li>
                                <li>
                                    <a href="~/Document/ThamKhao/?cate=RuleSercurityInfo" id="RuleSercurityInfo">- Quy định bảo mật thông tin</a>
                                </li>
                                <li>
                                    <a href="~/Document/ThamKhao/?cate=RuleEthic" id="RuleEthic">- Quy định chuẩn mực đạo đức</a>
                                </li>
                            </ul>
                            <!-- /.nav-second-level -->
                        </li>
                        @if (session != null && session.ToString() == "admin")
                        {
                            <li style="font-size: large;">
                                <a href="~/QA/History"> <strong>3. Thống kê câu hỏi </strong></a>
                            </li>
                        }

                    </ul>
                </div>
            </div>
            <div id="page-wrapper">
                <div class="row" style="margin-right:0px">
                    <img src="~/Resources/images/037.JPG" class="img-header" style="width:100%; height: 167px" />
                </div>
                @RenderBody()
            </div>
        </div>
        <!-- /#page-wrapper -->
    </div>
    <!-- jQuery -->
    <script src="~/Scripts/jquery.min.js"></script>
    <!-- Bootstrap Core JavaScript -->
    <script src="~/Scripts/plugins/bootstrap.min.js"></script>
    <!-- Metis Menu Plugin JavaScript -->
    @*   <script src="~/Scripts/metisMenu.min.js"></script>*@
    <!-- Custom Theme JavaScript -->
    <script src="~/Scripts/startmin.js"></script>
    <script src="~/Scripts/app/common/LoadDataJS.js"></script>

    @*<script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/plugins/mustache.min.js"></script>
    <script src="~/Scripts/jquery.twbsPagination.min.js"></script>*@
    @*<script src="~/Scripts/app/controller/questionjs.js"></script>
    <script src="~/Scripts/app/controller/documentjs.js"></script>*@
    @RenderSection("scripts", required: false)
</body>
</html>
